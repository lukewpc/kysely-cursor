{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2022",
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "baseUrl": "src",
    "types": ["vitest/globals"],
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts"]
}
